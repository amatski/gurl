{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strict": true,
    "preserveConstEnums": true,
    "declaration": true,
    "types": []
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
